<table class="table">
	<thead class="text-center">
		<tr>
			<th>id</th>
			<th>ユーザー名</th>
			<th>登録日</th>
			<th>タスク数</th>
			<th>権限</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |u| %>
		<tr>
			<td><%= u.id %></td>
			<td><%= u.name %></td>
			<td><%= u.created_at %></td>
			<td><%= u.tasks.count %></td>
			<td><%= u.admin %></td>
			<td><%= link_to t('.edit'), edit_admin_user_path(u) %></td>
			<td><%= link_to t('.show'), admin_user_path(u) %></td>
			<td><%= link_to t('.destroy'), admin_user_path(u), method: :delete, data: { confirm: '削除しますか？'} %></td>
		</tr>
		<% end %>
	</tbody>
</table>
